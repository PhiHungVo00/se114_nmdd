<?xml version="1.0" encoding="utf-8"?>
<!--
  File: AndroidManifest.xml
  Ý nghĩa: Khai báo cấu hình, quyền và thành phần chính của app Android.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền truy cập Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Quyền đọc bộ nhớ ngoài (legacy, Android 10+ nên hạn chế) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"   <!-- Quy tắc extract dữ liệu cho backup Android 12+ -->
        android:fullBackupContent="@xml/backup_rules"              <!-- Quy tắc backup legacy -->
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_sercurity_config" <!-- Cấu hình bảo mật mạng: HTTP/HTTPS... -->
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"                                <!-- Hỗ trợ giao diện từ phải sang trái -->
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">                                     <!-- Định hướng compile/target cho IDE -->

        <!-- MainActivity: entry point của app -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />   <!-- Định nghĩa đây là app launcher -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Đăng nhập/Đăng ký -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
