<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#141A31">


    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="  CineStream"
            android:textColor="@color/colorTextIcons"
            android:textSize="@dimen/_14sdp"
            app:drawableStartCompat="@drawable/ic_movie"
            app:drawableTint="@color/colorTextIcons" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Thumbnail -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Thumbnail"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageThumbnail"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginBottom="12dp"
                android:background="#333333"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/buttonPickThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Thumnail Image" />

            <!-- Danh sách ảnh bìa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Cover Images"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCoverImages"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:padding="4dp" />

            <!-- Thông tin Firm -->
            <EditText
                android:id="@+id/editFirmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#888888"
                android:hint="Firm Name"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />

            <!-- Thêm các EditText khác tương tự: start_date, end_date, rating, runtime -->

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#888888"
                android:hint="Description"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />
            <EditText
                android:id="@+id/editRunningTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#888888"
                android:inputType="number"
                android:hint="Running Time (minutes)"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />
            <EditText
                android:id="@+id/editRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#888888"
                android:hint="Rating (0-10)"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />
            <EditText
                android:id="@+id/editRatingCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#888888"
                android:hint="Rating Count"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />
            <EditText
                android:id="@+id/editStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#888888"
                android:hint="Start Date (YYYY-MM-DD)"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />
            <EditText
                android:id="@+id/editEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#888888"
                android:hint="End Date (YYYY-MM-DD)"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />



            <Button
                android:id="@+id/buttonCreateFirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#FF4081"
                android:text="Create Firm"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
