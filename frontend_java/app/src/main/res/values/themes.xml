<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 
      Base application theme.
      Theme.MyApplication kế thừa Theme.MaterialComponents.DayNight.DarkActionBar 
      (tự động chuyển dark/light mode, hỗ trợ ActionBar tối).
    -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Ẩn ActionBar mặc định và loại bỏ tiêu đề cửa sổ để tự kiểm soát giao diện -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. (màu chủ đạo) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. (màu thương hiệu phụ) -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color: màu của thanh trạng thái hệ điều hành (status bar) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here. (bạn có thể bổ sung thuộc tính style riêng tại đây) -->
    </style>
</resources>
