<?xml version="1.0" encoding="UTF-8"?>
<!--
  File: misc.xml
  Mô tả: Thiết lập chung cho dự án Android/IntelliJ.
-->
<project version="4">
  
  <!--
    ExternalStorageConfigurationManager
    • enabled="true"  → IDE cho phép đồng bộ/sao lưu cấu hình dự án
      ra bộ nhớ ngoài (Settings Sync).
  -->
  <component name="ExternalStorageConfigurationManager" enabled="true" />
  
  <!--
    ProjectRootManager
    • Quản lý JDK & thư mục output biên dịch cho toàn dự án.
  -->
  <component name="ProjectRootManager"
             version="2"
             languageLevel="JDK_21"        <!-- Java source level 21 -->
             default="true"
             project-jdk-name="jbr-21"     <!-- JetBrains Runtime 21 -->
             project-jdk-type="JavaSDK">

    <!-- Thư mục chứa byte-code sau khi build -->
    <output url="file://$PROJECT_DIR$/build/classes" />
  </component>
  
  <!--
    ProjectType
    • id="Android"  → kích hoạt plugin Android, Gradle Android, v.v.
  -->
  <component name="ProjectType">
    <option name="id" value="Android" />
  </component>
</project>
